extends layout

block header
  link(rel="stylesheet" href="/stylesheets/index.css")

block content
  .container.page(ng-app="tbApp" ng-controller="indexController")
    h1 TB-App
    div.controls
      div
        input(type="text" ng-model="blog")
        span .tumblr.com
      div
        button(ng-click="load()") Load
    div.posts
       div.post(ng-repeat="post in posts")
         div.post-body(ng-bind-html="post.body")
         a.photo(ng-href="{{post.postUrl}}")
           img(ng-src="{{post.photoUrl}}")
         span.caption(ng-bind-html="post.caption")

block scripts
  script(src="/scripts/lib/lodash.js")
  script(src="/scripts/lib/jquery.min.js")
  script(src="/scripts/lib/angular.min.js")
  script(src="/scripts/lib/angular-route.min.js")
  script(src="/scripts/app.js")
