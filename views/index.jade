extends layout

block header
  link(rel="stylesheet" href="/stylesheets/index.css")

block content
  .container.page(ng-app="tbApp" ng-controller="indexController")
    h1 TB-App
    div.controls
      div
        input(type="text" ng-model="blog")
        span .tumblr.com
      div
        button(ng-click="load()") Load
    div.posts
       div.post(ng-repeat="post in posts")
         div.post-body(ng-bind-html="post.body")
         a.photo(ng-href="{{post.postUrl}}")
           img(ng-src="{{post.photoUrl}}")
         span.caption(ng-bind-html="post.caption")

block scripts
  script(src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.15/lodash.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.7.9/angular.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/angular-route/1.7.9/angular-route.min.js")
  script(src="/scripts/app.js")
